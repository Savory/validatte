{
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["./**/*.test.ts"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"options": {
			"singleQuote": true,
			"useTabs": true
		},
		"files": {
			"exclude": ["coverage/", "doc/"]
		}
	},
	"tasks": {
		"test": "deno test --coverage=coverage spec/"
	}
}
